<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igorcgarcia.dhmarveld3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.DH3Aplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DHMarvelD3">
        <activity
            android:name=".view.activity.CoverDetalheActivity"
            android:label=""
            android:parentActivityName=".view.activity.DetalheComicsActivity"
            android:theme="@style/Theme.DHMarvelD3CoverActionBar" />
        <activity
            android:name=".view.activity.DetalheComicsActivity"
            android:label=""
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/Theme.DHMarvelD3DetalheActionBar" />
        <activity android:name=".view.activity.HomeActivity" />
        <activity
            android:name=".view.activity.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".view.activity.LoginActivity"
            android:theme="@style/Theme.DHMarvelD3RegisterActionBar" />
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>